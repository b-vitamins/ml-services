@InProceedings{pmlr-v62-nakharutai17a,
  title = 	 {Efficient Algorithms for Checking Avoiding Sure Loss},
  author = 	 {Nakharutai, Nawapon and Troffaes, Matthias C. M. and Caiado, Camila C. S.},
