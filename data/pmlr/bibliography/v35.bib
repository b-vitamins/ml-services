 author = {Arora, Sanjeev and Ge, Rong and Moitra, Ankur},
 booktitle = {Proceedings of The 27th Conference on Learning Theory},
 editor = {Balcan, Maria Florina and Feldman, Vitaly and SzepesvÃ¡ri, Csaba},
