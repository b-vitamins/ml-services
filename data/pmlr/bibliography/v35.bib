 pdf = {http://proceedings.mlr.press/v35/anderson14.pdf},
 publisher = {PMLR},
 series = {Proceedings of Machine Learning Research},
 title = {The More, the Merrier: the Blessing of Dimensionality for Learning Large Gaussian Mixtures},
